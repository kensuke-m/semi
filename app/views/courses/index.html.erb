<% if notice %>
  <div class="alert alert-info" role="alert">
    <p id="notice"><%= notice %></p>
  </div>
<% end %>

<div class="page-header">
  <h1>専攻一覧</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>Name</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @courses.each do |course| %>
        <tr>
          <td><%= course.name %></td>
          <td><%= link_to t(:show), course %></td>
          <td><%= link_to t(:edit), edit_course_path(course) %></td>
          <td><%= link_to t(:destroy), course, method: :delete, data: { confirm: t(:sure) } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<p>
  <%= link_to t(:new), new_course_path, class: "link" %>
</p>