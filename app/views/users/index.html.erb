<% if notice %>
  <div class="alert alert-info" role="alert">
    <p id="notice"><%= notice %></p>
  </div>
<% end %>

<div class="page-header">
  <h1>ユーザ一覧</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>Name</th>
        <th>Password digest</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.name %></td>
          <td><%= user.password_digest %></td>
          <td><%= link_to t(:show), user %></td>
          <td><%= link_to t(:edit), edit_user_path(user) %></td>
          <td><%= link_to t(:destroy), user, method: :delete, data: { confirm: t(:sure) } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<p>
  <%= link_to t(:new), new_user_path, class: "link" %>
</p>

