<div class="page-header">
  <h1>教員一覧</h1>
</div>

<p>
  <%= link_to t(:new), new_staff_path, class: "link" %>
</p>

<div class="table-responsive">
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>Username</th>
        <th>Lastname</th>
        <th>Firstname</th>
        <th>Kana</th>
        <th>Course</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @staffs.each do |staff| %>
        <tr>
          <td><%= staff.username %></td>
          <td><%= staff.lastname %></td>
          <td><%= staff.firstname %></td>
          <td><%= staff.kana %></td>
          <td><%= staff.course.name %></td>
          <td><%= link_to t(:show), staff %></td>
          <td><%= link_to t(:edit), edit_staff_path(staff) %></td>
          <td><%= link_to t(:destroy), staff, method: :delete, data: { confirm: t(:sure) } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<p>
  <%= link_to t(:new), new_staff_path, class: "link" %>
</p>
