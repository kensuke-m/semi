<% if alert %>
  <div class="alert alert-danger" role="alert">
    <p id="alert"><%= alert %></p>
  </div>
<% end %>
<% if notice %>
  <div class="alert alert-info" role="alert">
    <p id="notice"><%= notice %></p>
  </div>
<% end %>

<div class="page-header">
    <h1>Sign in</h1>
</div>

<%= form_tag do %>
  <div class="form-group">
    <%= label_tag :name, "Username:" %><br>
    <%= text_field_tag :name, params[:name], class: "form-control", autofocus: true %>
  </div>
  <div class="form-group">
    <%= label_tag :password, "Password:" %><br>
    <%= password_field_tag :password, params[:password], class: "form-control" %>
  </div>
  <div class="actions">
    <%= submit_tag "Sign in", class: "btn btn-default" %>
  </div>
<% end %>