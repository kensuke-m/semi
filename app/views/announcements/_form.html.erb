<%= form_for(@announcement) do |f| %>
  <% if @announcement.errors.any? %>
    <div id="error_explanation" class="alert alert-danger" role="alert">
      <h2><%= pluralize(@announcement.errors.count, "error") %> prohibited this announcement from being saved:</h2>

      <ul>
      <% @announcement.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :contents %><br>
    <%= f.text_area :contents, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :displayflag %><br>
    <%= f.number_field :displayflag, class: "form-control", placeholder: "1:いつでも, 2:ログイン後, 3:ログイン後教員向け, 4:ログイン後学生向け" %>
  </div>
  <div class="actions">
    <%= f.submit class: "btn btn-default" %>
  </div>
<% end %>
