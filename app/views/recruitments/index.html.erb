<% if notice %>
  <div class="alert alert-info" role="alert">
    <p id="notice"><%= notice %></p>
  </div>
<% end %>

<div class="page-header">
  <h1>募集一覧</h1>
</div>

<p class="lead">
  募集テーブルの各レコードは，担当レコードに付随して自動生成されます．
</p>
<p>
  <%= link_to t(:new), new_recruitment_path, class: "link" %>
</p>

<div class="table-responsive">
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>Staff</th>
        <th>Subject</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @recruitments.each do |recruitment| %>
        <tr>
          <td><%= recruitment.staff.lastname %></td>
          <td><%= recruitment.subject.name %></td>
          <td><%= link_to t(:show), recruitment %></td>
          <td><%= link_to t(:edit), edit_recruitment_path(recruitment) %></td>
          <td><%= link_to t(:destroy), recruitment, method: :delete, data: { confirm: t(:sure) } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<p>
  <%= link_to t(:new), new_recruitment_path, class: "link" %>
</p>
