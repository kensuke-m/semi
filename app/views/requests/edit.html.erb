<div class="page-header">
  <h1>配属希望の編集</h1>
</div>

<% if User.admin?(session[:user_name]) %>
  <%= render 'form' %>
<% else %>
  <p><strong>科目：</strong> <%= @request.subject.name %></p>
  <p><strong>ゼミ：</strong> <%= @request.staff.lastname %></p>
  <%= form_for(@request) do |f| %>
    <div class="form-group">
      <%= f.label :reason %>（<a href="https://ja.wikipedia.org/wiki/Markdown" target="_blank" class="link">Markdown記法</a>が利用できます）<br>
      <%= f.text_area :reason, class: "form-control", autofocus: true %>
    </div>
    <%= f.hidden_field :subject_id %>
    <%= f.hidden_field :staff_id %>
    <%= f.hidden_field :studentusername %>
    <%= f.hidden_field :studentname %>
    <%= f.hidden_field :permission %>
    <div class="actions">
      <%= f.submit class: "btn btn-success" %>
      <%= link_to "キャンセル", @request, class: "btn btn-default" %>
    </div>
  <% end %>
<% end %>
