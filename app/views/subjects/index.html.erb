<div class="page-header">
  <h1>科目一覧</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>Name</th>
        <th>Grade</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @subjects.each do |subject| %>
        <tr>
          <td><%= subject.name %></td>
          <td><%= subject.grade %></td>
          <td><%= link_to t(:show), subject %></td>
          <td><%= link_to t(:edit), edit_subject_path(subject) %></td>
          <td><%= link_to t(:destroy), subject, method: :delete, data: { confirm: t(:sure) } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<p>
  <%= link_to t(:new), new_subject_path, class: "link" %>
</p>
