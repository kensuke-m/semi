  <div class="form-inline">
    <div class="form-group">
      <label>XLS, XLSX or CSV:</label>
      <%= form_tag import_charges_path, multipart: true do %>
        <%= file_field_tag :file, class: "form-control"  %>
        <%= submit_tag t(:import), class: "btn btn-default" %>
      <% end %>
    </div>
  </div>
-->
</p>

<div class="table-responsive">
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>Staff</th>
        <th>Subject</th>
        <th>Capacity</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @charges.each do |charge| %>
        <tr>
          <td><%= charge.staff.lastname %></td>
          <td><%= charge.subject.name %></td>
          <td><%= charge.capacity %></td>
          <td><%= link_to t(:show), charge %></td>
          <td><%= link_to t(:edit), edit_charge_path(charge) %></td>
          <td><%= link_to t(:destroy), charge, method: :delete, data: { confirm: t(:sure) } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<p>
  <%= link_to t(:new), new_charge_path, class: "link" %>
</p>
